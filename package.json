{
    "name": "openapi-clientlib",
    "version": "8.4.0-beta-signal",
    "engines": {
        "node": ">=4"
    },
    "scripts": {
        "build:doc": "rimraf doc && jsdoc src --destination doc",
        "dist": "npm-run-all -s clean rollup",
        "clean": "rimraf dist",
        "rollup": "rollup -c",
        "dist-watch": "nodemon --watch src --watch libs -e js --exec npm run rollup",
        "check": "npm-run-all -p lint prettier:check test",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:debug": "node --inspect-brk node_modules/jest/bin/jest --runInBand",
        "prettier:write": "prettier **/*.{js,json} --write",
        "prettier:check": "prettier **/*.{js,json} --check",
        "prepare": "npm run dist",
        "preversion": "npm run check",
        "version": "git add package-lock.json",
        "postversion": "git push"
    },
    "jest": {
        "verbose": true,
        "setupFiles": [
            "./test/jestSetup.js"
        ],
        "transform": {
            "^.+\\.jsx?$": "babel-jest"
        },
        "moduleDirectories": [
            "node_modules",
            "<rootDir>"
        ],
        "testEnvironment": "jsdom",
        "restoreMocks": true,
        "coverageDirectory": "dist/coverage/"
    },
    "main": "dist/release/openapi-client.js",
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/SaxoBank/openapi-clientlib-js.git"
    },
    "license": "Apache-2.0",
    "devDependencies": {
        "@babel/core": "7.13.10",
        "@babel/preset-env": "7.13.10",
        "babel-jest": "26.6.3",
        "eslint": "7.22.0",
        "eslint-import-resolver-node": "0.3.4",
        "eslint-plugin-destructuring": "2.2.1",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-promise": "4.3.1",
        "eslint-plugin-switch-case": "1.1.2",
        "fast-text-encoding": "1.0.3",
        "jest": "26.6.3",
        "jsdoc": "^3.6.6",
        "mockdate": "3.0.4",
        "nodemon": "2.0.7",
        "npm-run-all": "4.1.5",
        "prettier": "2.2.1",
        "protobufjs": "6.10.2",
        "regenerator-runtime": "0.13.7",
        "rimraf": "3.0.2",
        "rollup": "2.0.6",
        "rollup-plugin-babel": "4.4.0"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": true,
        "arrowParens": "always",
        "endOfLine": "auto",
        "overrides": [
            {
                "files": [
                    "package.json",
                    "package-lock.json"
                ],
                "options": {
                    "endOfLine": "lf"
                }
            }
        ]
    }
}
