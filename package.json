{
    "name": "openapi-clientlib",
    "version": "8.1.2",
    "engines": {
        "node": ">=4"
    },
    "scripts": {
        "build:doc": "rimraf doc && jsdoc src --destination doc",
        "dist": "npm-run-all -s clean rollup",
        "clean": "rimraf dist",
        "rollup": "rollup -c",
        "dist-watch": "nodemon --watch src --watch libs -e js --exec npm run rollup",
        "check": "npm-run-all -p lint prettier:check test",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:debug": "node --inspect-brk node_modules/jest/bin/jest --runInBand",
        "prettier:write": "prettier **/*.{js,json} --write",
        "prettier:check": "prettier **/*.{js,json} --check",
        "prepare": "npm run dist",
        "preversion": "npm run check",
        "version": "git add package-lock.json",
        "postversion": "git push"
    },
    "jest": {
        "verbose": true,
        "setupFiles": [
            "./test/jestSetup.js"
        ],
        "transform": {
            "^.+\\.jsx?$": "babel-jest"
        },
        "moduleDirectories": [
            "node_modules",
            "<rootDir>"
        ],
        "testEnvironment": "jsdom",
        "restoreMocks": true,
        "coverageDirectory": "dist/coverage/"
    },
    "main": "dist/release/openapi-client.js",
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/SaxoBank/openapi-clientlib-js.git"
    },
    "license": "Apache-2.0",
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@babel/preset-env": "7.9.0",
        "babel-jest": "25.1.0",
        "eslint": "6.8.0",
        "eslint-import-resolver-node": "0.3.3",
        "eslint-plugin-destructuring": "2.2.0",
        "eslint-plugin-import": "2.20.1",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-promise": "4.2.1",
        "eslint-plugin-switch-case": "1.1.2",
        "fast-text-encoding": "1.0.3",
        "jest": "25.1.0",
        "jsdoc": "^3.6.4",
        "mockdate": "2.0.2",
        "nodemon": "2.0.2",
        "npm-run-all": "4.1.5",
        "prettier": "1.19.1",
        "protobufjs": "6.8.9",
        "regenerator-runtime": "0.13.1",
        "rimraf": "2.6.2",
        "rollup": "2.0.6",
        "rollup-plugin-babel": "4.4.0"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": true,
        "arrowParens": "always"
    }
}
